@model MOJTaskDemo.Models.DTOs.UserEditDto
@{
    ViewData["Title"] = "Edit User";
    var roles = (List<MOJTaskDemo.Models.DTOs.RoleLookupDto>)ViewBag.Roles;
}
<div class="container-fluid">
    <div class="card">
        <div class="card-header"><h5 class="mb-0">Edit User</h5></div>
        <div class="card-body">
            <form method="post" asp-action="Edit">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label>Username</label>
                    <input asp-for="Username" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Full Name</label>
                    <input asp-for="FullName" class="form-control" required />
                </div>
             
                <div class="form-group">
                    <label>Roles</label>
                    <div class="row">
                        @foreach (var r in roles)
                        {
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio"
                                           value="@r.Id" name="RoleId" id="r-@r.Id"
                                           @(Model.RoleId == r.Id ? "checked" : "")>
                                    <label class="form-check-label" for="r-@r.Id">@r.Name</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <button class="btn btn-primary">Update</button>
                <a class="btn btn-secondary" href="~/Users">Cancel</a>
                <div class="col-12">
                    <div class="text-danger mt-2">
                        @Html.ValidationSummary()
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
