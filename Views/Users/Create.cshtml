@model MOJTaskDemo.Models.DTOs.UserEditDto
@{
    ViewData["Title"] = "Add User";
    var roles = (List<MOJTaskDemo.Models.DTOs.RoleLookupDto>)ViewBag.Roles;
}
<div class="container-fluid">
    <div class="card">
        <div class="card-header"><h5 class="mb-0">Add User</h5></div>
        <div class="card-body">
            <form method="post" asp-action="Create">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Username</label>
                    <input asp-for="Username" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Full Name</label>
                    <input asp-for="FullName" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input asp-for="NewPassword" type="password" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Role</label>
                    <div class="row">
                        @foreach (var r in roles)
                        {
                            <div class="col-md-4">
                                <div class="form-check">
                                    <!-- use same name="RoleIds" but radio instead of checkbox -->
                                    <input class="form-check-input" type="radio"
                                           value="@r.Id" name="RoleIds" id="r-@r.Id" required>
                                    <label class="form-check-label" for="r-@r.Id">@r.Name</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <button class="btn btn-primary">Save</button>
                <a class="btn btn-secondary" href="~/Users">Cancel</a>
                <div class="col-12">
                    <div class="text-danger mt-2">
                        @Html.ValidationSummary()
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
