@model MOJTaskDemo.Models.DTOs.UserAddDto
@{
    ViewData["Title"] = "Add User";
    var roles = (List<MOJTaskDemo.Models.DTOs.RoleLookupDto>)ViewBag.Roles;
}
<div class="container-fluid">
    <div class="card">
        <div class="card-header"><h5 class="mb-0">Add User</h5></div>
        <div class="card-body">
            <form method="post" asp-action="Create" novalidate>
                @Html.AntiForgeryToken()

                <!-- Summary only -->
                <div class="mb-3">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>

                <div class="form-group mb-3">
                    <label>Username</label>
                    <input asp-for="Username" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label>Full Name</label>
                    <input asp-for="FullName" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label>Password</label>
                    <input asp-for="NewPassword" type="password" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label>Role</label>
                    <div class="row">
                        @foreach (var r in roles)
                        {
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio"
                                           value="@r.Id" name="RoleId" id="r-@r.Id">
                                    <label class="form-check-label" for="r-@r.Id">@r.Name</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <button class="btn btn-primary">Save</button>
                <a class="btn btn-secondary" href="~/Users">Cancel</a>
            </form>
        </div>
    </div>
</div>
